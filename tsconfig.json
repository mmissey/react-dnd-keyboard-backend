{
	"compilerOptions": {
		"incremental": true,
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": ["esnext", "dom"],
		"strict": true,
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"jsx": "react",
		"forceConsistentCasingInFileNames": true,
		"declaration": true
	},
	"include": [
		"./src"
	],
	"exclude": [
		"./dist"
	]
}